@code {
    [CascadingParameter] public SectionOutlet? SectionOutlet { get; set; }

    [Parameter] public string SectionId { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }

    protected override void OnInitialized()
    {
        if (SectionOutlet == null)
        {
            throw new InvalidOperationException("SectionOutlet is not found. Make sure the SectionContent is within a layout containing SectionOutlet.");
        }

       
        SectionOutlet.SetContent(SectionId, ChildContent);
    }
}
